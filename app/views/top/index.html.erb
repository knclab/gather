<div class="container">

  <div class="page-header" id="banner">
    <div class="text-center">
      <h1><%= link_to(t('views.header.title'), root_url, style: 'color:#000000;') %></h1>
      <p><%= t('views.header.description') %></p>
      <%= render :partial => "/top/social_button.html.erb" %>
      <%#= render :partial => "/top/sponsor" %>
    </div>
  </div>

  <div class="row">
  <% @results.each do |media| %>
      <a href="<%= media[:link] %>" target='_blnak'>
      <div class="col-lg-4 col-sm-6 col-xs-12">
        <div class="thumbnail">
          <img src="<%= media[:images][:low_resolution][:url] %>" class="" alt="Responsive image">
        </div>
      </div>
    </a>
  <% end %>
  </div>

  <div class="btn-group btn-group-justified">
    <div class="btn-group">
        <a class="btn btn-default" href="<%= root_url(max_id: @next_max_id)%>" role="button">もっとみる</a>
    </div>
  </div>
</div> <!-- /container -->
