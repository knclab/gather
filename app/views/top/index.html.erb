<div class="container">

  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-8 col-md-7 col-sm-6">
        <h1><%= t('views.category') %></h1>
        <%= render :partial => "/top/social_button.html.erb" %>
        <div class="well">
          <h4>Instagramとは？</h4>
          <p><a href="http://instagram.com/">写真を撮影して共有できるスマートフォン用アプリ</a>です。</p>
          <p><%= t('views.header.description') %></p>
        </div>
      </div>
      <%= render :partial => "/top/sponsor" %>
    </div>
  </div>

  <div class="row">
  <% @categories.each do |category| %>
      <a href="<%= list_url(category.id) %>">
      <div class="col-lg-4 col-sm-6 col-xs-12">
        <div class="thumbnail">
          <img src="<%= category.medias.first[:images][:low_resolution][:url] %>" class="" alt="Responsive image">
          <div class="caption">
            <h5><%= category.name %></h5>
          </div>
        </div>
      </div>
    </a>
  <% end %>
  </div>
</div> <!-- /container -->

